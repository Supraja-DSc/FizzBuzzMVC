@model FizzBuzz.Models.FizzBuzzModel
@{
    ViewData["Title"] = "FizzBuzz Numbers";
}
<div>
    <form asp-controller="FizzBuzz" asp-action="Generate" method="post">
        <div>
            <label for="input">Enter a number (1-1000): </label>
            <input type="number" id="input" name="Input" min="1" max="1000" required>
            <span asp-validation-for="Input"></span>
        </div>
        <button type="submit">Generate FizzBuzz</button>
    </form>

</div>